apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-svcconf-##PREFIX##
spec:
  accessModes:
    - ReadWriteMany
  volumeMode: Filesystem
  resources:
    requests:
      storage: ##SERVICECONF_QUOTA##
  storageClassName: local-storage
  selector:
    matchLabels:
      pvl: "svc-conf"
---
