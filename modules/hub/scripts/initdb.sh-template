#! /bin/bash

# Let the database come online
sleep 10

FLAG=/var/lib/mysql/.initialized

R=`echo "show databases" | mysql -u root --password=##HUBDBROOTPW##  | grep  ##HUBDB##`; [ "$R"  ] && exit 0

[ -f $FLAG ] && exit 0

cat | mysql -u root --password=##HUBDBROOTPW## << EOF

CREATE DATABASE ##HUBDB##;
CREATE USER '##HUBDBUSER##'@'%' IDENTIFIED BY '##HUBDBPW##';
GRANT ALL ON ##HUBDB##.* TO '##HUBDBUSER##'@'%';

EOF

touch $FLAG
