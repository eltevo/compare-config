networks:
  ##PREFIX##-net:
    external: true
  ##PREFIX##-slurm-privatenet:
    external: false

volumes:
  ##PREFIX##-etc-munge:
    external: true
  ##PREFIX##-etc-slurm:
    external: true
  ##PREFIX##-slurm-jobdir:
    external: true
  ##PREFIX##-slurmdb:
    external: true
  ##PREFIX##-var-log-slurm:
    external: true


